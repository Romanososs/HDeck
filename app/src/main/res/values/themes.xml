<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HDeck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_30</item>
        <item name="colorPrimaryVariant">@color/blue_20</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow_45</item>
        <item name="colorSecondaryVariant">@color/yellow_40</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/blue_30</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="listPopupWindowStyle">@style/DropDownMenu</item>
    </style>

    <style name="Theme.HDeck.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="DropDownMenu" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@color/blue_20</item>
    </style>
    <style name="IconButton" parent="Widget.MaterialComponents.Button" >
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>