<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/placeholder">

    <fragment
        android:id="@+id/placeholder"
        android:name="com.example.hdeck.ui.placeholder.PlaceholderFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_placeholder" />
    <fragment
        android:id="@+id/deck_list"
        android:name="com.example.hdeck.ui.deck_list.DeckListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_deck_list">
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <argument
            android:name="slug"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_deck_list"
        app:destination="@id/deck_list"
        app:popUpTo="@id/mobile_navigation" />
</navigation>