<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/deck_list">

    <fragment
        android:id="@+id/deck_list"
        android:name="com.example.hdeck.ui.deck_list.DeckListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_deck_list">
        <argument
            android:name="categoryId"
            app:argType="integer"
            android:defaultValue="0"/>
        <action
            android:id="@+id/action_deckListFragment_to_deckListFragment"
            app:destination="@id/deck_list"
            app:launchSingleTop="true"
            app:popUpTo="@+id/deck_list"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>