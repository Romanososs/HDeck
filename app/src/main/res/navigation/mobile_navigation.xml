<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation">

    <fragment
        android:id="@+id/placeholder"
        android:name="com.example.hdeck.ui.placeholder.PlaceholderFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_placeholder">
        <action
            android:id="@+id/action_placeholder_to_card_set_list"
            app:destination="@id/card_set_list"
            app:popUpTo="@id/placeholder"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_placeholder_to_hero_class_list"
            app:destination="@id/hero_class_list"
            app:popUpTo="@id/placeholder"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_placeholder_to_card_rarity_list"
            app:destination="@id/card_rarity_list"
            app:popUpTo="@id/placeholder"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/card_set_list"
        android:name="com.example.hdeck.ui.deck_list.DeckListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_deck_list">
        <argument
            android:name="slug"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/hero_class_list"
        android:name="com.example.hdeck.ui.deck_list.DeckListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_deck_list">
        <argument
            android:name="slug"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/card_rarity_list"
        android:name="com.example.hdeck.ui.deck_list.DeckListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_deck_list">
        <argument
            android:name="slug"
            app:argType="string" />
    </fragment>
</navigation>